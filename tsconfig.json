{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/App.minimal.tsx", "src/main.tsx", "src/components", "src/utils", "src/hooks", "src/types", "src/stores/basic-timer-store.ts", "src/stores/pomodoro-store.ts"],
  "exclude": [
    "src/App.full.tsx",
    "src/App.simple.tsx", 
    "src/App.tsx",
    "src/components/AgendaTimer.tsx",
    "src/components/NewAgendaTimer.tsx",
    "src/components/MultiTimer.tsx",
    "src/stores/agenda-timer-store.ts",
    "src/stores/multi-timer-store.ts",
    "src/features/timer",
    "src/lib/database.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
