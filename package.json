{
  "name": "focuso",
  "version": "0.1.0",
  "description": "業務効率化を目的とした多機能タイマーアプリケーション",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:pages": "tsc && vite build --base=./",
    "test": "vitest",
    "test:run": "vitest run",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:security": "eslint src --ext ts,tsx --rule 'security/detect-eval-with-expression: error' --rule 'security/detect-unsafe-regex: error' --rule 'no-unsanitized/property: error' --rule 'no-unsanitized/method: error'",
    "type-check": "tsc --noEmit",
    "spec:check": "specify check",
    "spec:lint": "specify check"
  },
  "keywords": [
    "timer",
    "pomodoro",
    "productivity",
    "time-management",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "overrides": {
    "glob": "^11.0.3",
    "minimatch": "^10.2.1",
    "quill": "2.0.2"
  },
  "engines": {
    "node": ">=20.19.0 <21 || >=22.11.0 <23"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@langchain/anthropic": "^1.3.18",
    "@langchain/core": "^1.1.26",
    "@langchain/openai": "^1.2.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/themes": "^3.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.469.0",
    "quill": "2.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^2.2.2",
    "recharts": "^2.13.3",
    "tailwind-merge": "^2.6.0",
    "zod": "^4.3.6",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.39.0",
    "eslint-plugin-no-unsanitized": "^4.1.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^4.0.0",
    "happy-dom": "^20.6.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
